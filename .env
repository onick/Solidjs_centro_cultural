# ===== CONFIGURACIÓN CCB SOLIDJS PLATFORM - FASE 5 =====
NODE_ENV=development

# ===== PUERTOS =====
PORT=3080
FRONTEND_PORT=3000
VUE_SYSTEM_PORT=8080

# ===== MONGODB CONFIGURACIÓN =====
MONGODB_URI=mongodb://admin:password123@localhost:27017/ccb_solidjs?authSource=admin
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=password123
MONGO_DATABASE=ccb_solidjs

# ===== REDIS CONFIGURACIÓN =====
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis123
REDIS_DB=0

# ===== JWT Y SEGURIDAD =====
JWT_SECRET=ccb_jwt_secret_key_2025_development
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# ===== SISTEMA VUE.JS EXISTENTE =====
VUE_SYSTEM_URL=http://localhost:8080

# ===== LOGGING =====
LOG_LEVEL=debug

# ===== FRONTEND VITE =====
VITE_API_URL=http://localhost:3080
VITE_VUE_SYSTEM_URL=http://localhost:8080
VITE_DEBUG=true
VITE_SYNC_ENABLED=true
VITE_SYNC_INTERVAL=5000

# ===== CORS CONFIGURACIÓN =====
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# ===== RATE LIMITING =====
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===== CONFIGURACIÓN DE CACHE =====
CACHE_TTL_EVENTS=300
CACHE_TTL_STATS=120
CACHE_TTL_CONFIG=600
